<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_layout"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
 	android:layout_marginTop="15dp"    
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_launcher">
    </ImageView>
    
    <TextView
        android:id="@+id/label_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/label_date"
        android:layout_toRightOf="@+id/icon"
        android:maxLines="2"
        android:text="@+id/label_description"
        android:textColor="#ffffff"
        android:textSize="14sp" >

    </TextView>

    <TextView
        android:id="@+id/label_date"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/label_title"
        android:layout_toRightOf="@+id/icon"
        android:maxLines="2"
        android:text="@+id/label_date"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold" >
        </TextView>

    <TextView
        android:id="@+id/pastEvents"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/past_events"
        android:textColor="#000000"
        android:background="#62cdf4"
        android:visibility = "invisible"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/label_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@+id/pastEvents"
        android:text="@+id/label_title"
        android:textColor="#33b5e5"
        android:textSize="22sp" />

</RelativeLayout>